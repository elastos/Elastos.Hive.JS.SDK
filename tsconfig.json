{
  "include": ["src"],
  "exclude": ["node_modules", "tests", "dist"],
  "compilerOptions": {
    "target": "es6",  
    "lib": ["es2017", "es7", "es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "strict": true,      
    "skipLibCheck": true, 
    "noImplicitAny": false,
    "removeComments": true,
    "rootDirs": ["src/"],
    "typeRoots": ["node_modules/@types", "typings"]
  }
}
